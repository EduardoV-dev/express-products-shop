<form id="product-form" action="{{#if isUpdating}}/admin/product-form/edit{{else}}/admin/product-form{{/if}}" method="POST" autocomplete="off">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="{{#if isUpdating}}{{product.title}}{{/if}}" />
  </div>
  <div class="form-group">
    <label for="image-url">Image URL</label>
    <input type="text" id="image-url" name="imageURL" value="{{#if isUpdating}}{{product.imageUrl}}{{/if}}" />
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    <input type="text" id="price" name="price" value="{{#if isUpdating}}{{product.price}}{{/if}}" />
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea id="description" name="description">{{#if isUpdating}}{{product.description}}{{/if}}</textarea>
  </div>
  {{#if isUpdating}} <input type="hidden" name="productId" value="{{product.id}}" /> {{/if}}
  <button class="btn btn-primary" type="submit">{{#if isUpdating}}Edit product{{else}}Add Product{{/if}} </button>
</form>