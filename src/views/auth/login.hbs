  {{#if errors.form}}
    <div class="user-message user-message--error">{{errors.form}}</div>
  {{/if}}

<form id="product-form" action="/auth/login" method="post">
  <input type="hidden" name="_csrf" value="{{csrfToken}}" />
  <div class="form-group">
    <label for="email">Email</label>
    <input type="text" id="email" name="email" value="{{initialValues.email}}" />
    {{#if errors.email}}
      <span>{{errors.email}}</span>
    {{/if}}
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" id="password" name="password"  value="{{initialValues.password}}" />
    {{#if errors.password}}
      <span>{{errors.password}}</span>
    {{/if}}
  </div>

  <button class="btn btn-primary" type="submit">Login</button>

  <a href="/auth/reset-password">Reset password</a>
 
</form>