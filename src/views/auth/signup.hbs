  {{#if errors.form}}
    <div class="user-message user-message--error">{{errors.errorMessage}}</div>
  {{/if}}

<form id="product-form" action="/auth/signup" method="post">
  <div class="form-group">
    <label for="email">Email</label>
    <input type="text" id="email" name="email" value="{{initialValues.email}}" />
    {{#if errors.email}}
      <span>{{errors.email}}</span>
    {{/if}}
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" id="password" name="password" value="{{initialValues.password}}"  />
    {{#if errors.password}}
      <span>{{errors.password}}</span>
    {{/if}}
  </div>
  <div class="form-group">
    <label for="repeatPassword">Repeat password</label>
    <input type="password" id="repeatPassword" name="repeatPassword" value="{{initialValues.repeatPassword}}"  />
    {{#if errors.repeatPassword}}
      <span>{{errors.repeatPassword}}</span>
    {{/if}}
  </div>
  <button class="btn btn-primary" type="submit">Sign Up</button>
</form>