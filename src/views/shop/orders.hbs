<section class="orders-list">
  {{#if orders.length}}
    {{#each orders}}
      <article class="order">
        <h1>Order - #{{_id}} - <a href="/shop/orders/{{_id}}">Invoice</a></h1>

        <ul>
          {{#each items}}
            <li>
              <a href="/shop/products/{{productId._id}}" style="color: #333;">{{productId.title}} ({{quantity}})</a>
            </li>
          {{/each}}
        </ul>
      </article>
    {{/each}}
  {{else}}
    <h2 class="title">No orders yet!</h2>
  {{/if}}
</section>